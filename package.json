{
  "name": "pakasir",
  "version": "1.0.0",
  "description": "A lightweight and easy-to-use unofficial Node.js client module for communicating with the Pakasir payment gateway.",
  "keywords": [
    "pakasir",
    "payment",
    "gateway",
    "client"
  ],
  "homepage": "https://github.com/gtpshax/pakasir#readme",
  "bugs": {
    "url": "https://github.com/gtpshax/pakasir/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtpshax/pakasir.git"
  },
  "license": "MIT",
  "author": "gtpshax",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "tsup": "^8.5.1"
  },
  "files": [
    "dist/"
  ],
  "sideEffects": false
}
